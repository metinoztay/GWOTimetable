@using System.Security.Claims;
@{
    ViewBag.MenuHead = "Dashboard";
    ViewBag.Controller = "";
    ViewBag.Action = "Dashboard";
    ViewBag.Title = "Dashboard";
}

<div class="container py-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4">GWO Timetable System</h1>
            <h3 class="text-muted">@User.FindFirstValue("WorkspaceId")</h3>
            <p class="lead">Welcome to your timetable management system</p>
        </div>
    </div>

    <!-- Navigation Cards -->
    <div class="row g-4">
        <!-- Classes Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-users fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title text-center">Classes</h5>
                    <p class="card-text">View, edit, and manage class information and constraints.</p>
                    <div class="mt-auto text-center">
                        <a href="@Url.Action("Management", "Class")" class="btn btn-outline-primary">Go to Classes</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Courses Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-book fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title text-center">Courses</h5>
                    <p class="card-text">Manage course contents and set course constraints.</p>
                    <div class="mt-auto text-center">
                        <a href="@Url.Action("Management", "Course")" class="btn btn-outline-success">Go to Courses</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Classrooms Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-door-open fa-3x text-danger"></i>
                    </div>
                    <h5 class="card-title text-center">Classrooms</h5>
                    <p class="card-text">Manage classroom resources and availability.</p>
                    <div class="mt-auto text-center">
                        <a href="@Url.Action("Management", "Classroom")" class="btn btn-outline-danger">Go to Classrooms</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Educators Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-chalkboard-teacher fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title text-center">Educators</h5>
                    <p class="card-text">View educator information and manage availability constraints.</p>
                    <div class="mt-auto text-center">
                        <a href="@Url.Action("Management", "Educator")" class="btn btn-outline-info">Go to Educators</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Time Settings Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-clock fa-3x text-secondary"></i>
                    </div>
                    <h5 class="card-title text-center">Time Settings</h5>
                    <p class="card-text">Configure time blocks and scheduling parameters.</p>
                    <div class="mt-auto text-center">
                        <a href="@Url.Action("Management", "Time")" class="btn btn-outline-secondary">Go to Time Settings</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Timetables Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <i class="fas fa-calendar-alt fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title text-center">Timetables</h5>
                    <p class="card-text">Generate and view optimized timetables.</p>
                    <div class="mt-auto text-center">
                        <a href="@Url.Action("Management", "Timetable")" class="btn btn-outline-warning">Go to Timetables</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add hover effect for cards
            $(".card").hover(
                function() { $(this).addClass("shadow").css("transform", "translateY(-5px)"); },
                function() { $(this).removeClass("shadow").css("transform", ""); }
            );
        });
    </script>
}
